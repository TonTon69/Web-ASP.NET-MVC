@{
    ViewBag.Title = "CartNull";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-shopping {
        background: #ff3945;
        color: #ffffff;
        padding: 10px 40px 10px 40px;
        border-radius: 3px;
    }
    .btn-shopping:hover{
        color: #ffffff;
    }
</style>

<div class="container-fluid">
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        Giỏ hàng không có sản phẩm. Vui lòng thực hiện lại.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="text-center mb-5" style="width: 100%; height: 400px; background: #ffffff">
        <img src="~/Content/assets/img/cart-null.png" width="200" class="mt-5 mb-4" />
        <p>Không có sản phẩm nào trong giỏ hàng của bạn.</p>
        <a href="/Products" class="btn-shopping">Tiếp tục mua sắm</a>
    </div>
</div>

