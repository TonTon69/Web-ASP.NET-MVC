            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</div>
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("tbl_product", new { page = page }))
</div>
