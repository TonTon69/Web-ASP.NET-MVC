@using Web_ASP.NET_MVC.Models
@model List<Product>

@{
    foreach (var item in Model)
    {
        <div class="col-lg-3" style="outline: none">
            <div class="product-item">
                <div class="product-title">
                    <a href="@Url.Action("Details", "Products", new { id = item.ProductCode })">@item.Name</a>
                    <div class="ratting">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                </div>
                <div class="product-image">
                    <a href="product-detail.html">
                        <img src="@Url.Content("~/Content/assets/img/" + item.Image)">
                    </a>
                    <div class="product-action">
                        <a href="#"><i class="fa fa-cart-plus"></i></a>
                        <a href="#"><i class="fa fa-heart"></i></a>
                        <a href="@Url.Action("Details", "Products", new { id = item.ProductCode })"><i class="fa fa-search"></i></a>
                    </div>
                </div>
                <div class="product-price">
                    <span style=" color: #333; font-weight: 600; font-size: 1.2rem">
                        @String.Format("{0:0,0}", @item.Price) đ
                    </span>
                    <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Mua Ngay</a>
                </div>
            </div>
        </div>
    }
}
