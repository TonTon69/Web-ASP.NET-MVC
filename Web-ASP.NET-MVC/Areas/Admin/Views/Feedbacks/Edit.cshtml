@model Web_ASP.NET_MVC.Models.FeedBack

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Cập Nhật Trạng Thái Phản Hồi</h2>
<div>
    <i class="fas fa-list"></i>
    @Html.ActionLink("Quay về Danh sách phản hồi của khách hàng", "Index")
</div>
<br />
@using (Html.BeginForm("Edit", "Feedbacks", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FeedBackCode)

        <table class="table">
            <tr>
                <th>
                    Tên
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Email
                </th>
                <th>
                    Địa Chỉ
                </th>
                <th>
                    Nội dung
                </th>
                <th>
                    Trạng thái
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Content)
                </td>
                <td class="text-center">
                    <div class="form-group">
                        @{
                            var htmlAttributes = ViewData["htmlAttributes"] ?? new { };

                            @Html.DropDownListFor(model => model.FbStatus,
                                new List<SelectListItem>(2) {
                                new SelectListItem { Text = "Đã phản hồi", Value = "true"},
                                new SelectListItem { Text = "Chưa phản hồi", Value = "false"}
                            }, htmlAttributes = new { @class = "form-control" })
                        }
                        @Html.ValidationMessageFor(model => model.FbStatus, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-default btn-primary" />
            </div>
        </div>
    </div>
}

