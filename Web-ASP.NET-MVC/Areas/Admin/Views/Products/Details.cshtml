@model Web_ASP.NET_MVC.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thông Tin Chi Tiết Sản Phẩm</h2>
<div>
    <i class="fas fa-list"></i>
    @Html.ActionLink("Quay về Danh mục sản phẩm", "Index")
</div>

<div class="mt-4">
    <dl class="dl-horizontal">
        <dt>ID:</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt>Tên:</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Giá:</dt>
        <dd>
            @String.Format("{0:0,0}", Model.Price) VNĐ
        </dd>
        <dt>Giá khuyến mãi:</dt>
        <dd>
            @String.Format("{0:0,0}", Model.PromotionPrice) VNĐ
        </dd>
        <dt>Mô tả:</dt>
        <dd style="width: 700px; text-align: justify">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt>Ảnh chính:</dt>
        <dd>
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt>Ảnh 1:</dt>
        <dd>
            @Html.DisplayFor(model => model.Image1)
        </dd>
        <dt>Ảnh 2:</dt>
        <dd>
            @Html.DisplayFor(model => model.Image2)
        </dd>
        <dt>Ảnh 3:</dt>
        <dd>
            @Html.DisplayFor(model => model.Image3)
        </dd>
        <dt>Ảnh 4:</dt>
        <dd>
            @Html.DisplayFor(model => model.Image4)
        </dd>
        <dt>Số lượng tồn:</dt>
        <dd>
            @Html.DisplayFor(model => model.Quanlity)
        </dd>
        <dt>Thể loại:</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductCetegory.Name)
        </dd>
        <dt>Được tạo bởi:</dt>
        <dd>
            @Html.DisplayFor(model => model.CreateBy)
        </dd>
        <dt>Ngày khởi tạo:</dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

    </dl>
    <br />
    <br />

</div>
