@model Web_ASP.NET_MVC.Models.ProductCetegory

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa thể loại</h2>
<h3>Bạn chắc chắn muốn xóa thể loại này?</h3>
<p>
    <i class="fas fa-list"></i>
    @Html.ActionLink("Quay về Danh sách thể loại", "Index")
</p>

<div>
    <br />
    <dl class="dl-horizontal">
        <dt>ID:</dt>
        <dd>
            @Html.DisplayFor(model => model.CategoryCode)
        </dd>
        <dt>Tên:</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>MetaTitle:</dt>
        <dd>
            @Html.DisplayFor(model => model.MetaTitle)
        </dd>
        <dt>DisplayOrder:</dt>
        <dd>
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>
        <dt>SeoTitle:</dt>
        <dd>
            @Html.DisplayFor(model => model.SeoTitle)
        </dd>
        <dt>ShowOnHome:</dt>
        <dd>
            @Html.DisplayFor(model => model.ShowOnHome)
        </dd>
        <dt>Ngày khởi tạo:</dt>
        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt>Được tạo bởi:</dt>
        <dd>
            @Html.DisplayFor(model => model.CreateBy)
        </dd>
    </dl>
    <br />
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-primary btn-default" />
        </div>
    }
</div>
