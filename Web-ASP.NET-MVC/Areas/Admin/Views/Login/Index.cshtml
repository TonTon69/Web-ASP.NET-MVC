@model Web_ASP.NET_MVC.Models.Administrator
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>HHTShop - Admin</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/assets/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">
    <style>
        form.user .form-control-user, .btn.btn-primary.btn-user.btn-block, .small {
            font-size: 1rem;
        }
    </style>
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block">
                                <img src="https://res.cloudinary.com/din6v2it9/image/upload/v1609688363/FashionShop-Products/bg-login-register/login_arf8tu.jpg" style="width: 100%; height: 100%; object-fit: cover" />
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 font-weight-bold mb-4">Đăng Nhập</h1>
                                    </div>

                                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "user mt-2" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            @Html.TextBoxFor(x => x.UserAdmin, new { @class = "form-control form-control-user", @placeholder = "Tên tài khoản" })
                                            @Html.ValidationMessageFor(m => m.UserAdmin, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(x => x.PasswordAdmin, new { @class = "form-control form-control-user", @placeholder = "Mật khẩu" })
                                            @Html.ValidationMessageFor(m => m.PasswordAdmin, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @if (ViewBag.error != null)
                                            {
                                                <span class="text-danger">@ViewBag.error</span>
                                            }
                                        </div>
                                        <button type="submit" name="submit" class="btn btn-primary btn-user btn-block mt-4 mb-4">
                                            Đăng nhập
                                        </button>
                                    }
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Quên mật khẩu?</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/assets/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/assets/js/sb-admin-2.min.js"></script>

</body>

</html>
