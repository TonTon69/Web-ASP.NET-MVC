@model IEnumerable<Web_ASP.NET_MVC.Models.Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thông Tin Công Ty</h2>
<br />
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Tên
        </th>
        <th>
            Email
        </th>
        <th>
            SĐT
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a href="@Url.Action("Edit","Company",new { id = item.CompanyCode })" class="btn btn-primary">
                    <i class="far fa-edit"></i>
                </a>
                <a href="@Url.Action("Delete","Company",new { id = item.CompanyCode })" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i>
                </a>
            </td>
        </tr>
    }

</table>
