@model Web_ASP.NET_MVC.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa sản phẩm</h2>
<h3>Bạn chắc chắn muốn xóa sản phẩm này?</h3>
@Html.ActionLink("Quay về Danh sách sản phẩm", "Index")

<div>
    <br />
    <dl class="dl-horizontal">
        <dt>Tên:</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Giá:</dt>
        <dd>
            @String.Format("{0:0,0}", Model.Price) VNĐ
        </dd>
        <dt>Mô tả:</dt>
        <dd style="width: 700px; text-align: justify">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt>Ảnh:</dt>
        <dd>
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt>Số lượng tồn:</dt>
        <dd>
            @Html.DisplayFor(model => model.Quanlity)
        </dd>
        <dt>Thể loại:</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductCetegory.Name)
        </dd>
    </dl>
    <br />
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger btn-default" />
        </div>
    }
    
</div>
