@model Web_ASP.NET_MVC.Models.Slide

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thông Tin Chi Tiết Banner</h2>
<p>
    <i class="fas fa-list"></i>
    @Html.ActionLink("Quay về Danh sách banner", "Index")
</p>

<div>
    <dl class="dl-horizontal">
        <dt>ID:</dt>
        <dd>
            @Html.DisplayFor(model => model.SlideCode)
        </dd>
        <dt>Ảnh:</dt>
        <dd>
            <img src="@Url.Content(@Model.Link)" height="350" width="800" />
        </dd>
        <dt>Mô tả:</dt>
        <dd>
            @Html.DisplayFor(model => model.Discription)
        </dd>
        <dt>Được tạo bởi:</dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        <dt>Ngày khởi tạo:</dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
    </dl>
    <br />
    <br />

</div>
