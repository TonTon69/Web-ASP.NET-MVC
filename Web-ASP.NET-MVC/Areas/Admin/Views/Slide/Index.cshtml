@model IEnumerable<Web_ASP.NET_MVC.Models.Slide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản Lý Thông Tin Banner</h2>
<div class="d-flex">
    <p class="mr-4">
        <i class="fas fa-plus"></i>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <p>
        <i class="fas fa-file-excel"></i>
        @Html.ActionLink("Xuất Excel", "ExportContentToExcel")
    </p>
</div>
<span>Tất cả (@ViewBag.message)</span>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Ảnh</th>
        <th>Mô tả</th>
        <th>Được tạo bởi</th>
        <th>Ngày khởi tạo</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SlideCode)
            </td>
            <td>
                <img src="@Url.Content(item.Link)" height="50" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new
           {
               id = item.SlideCode
           }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.SlideCode }, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.SlideCode }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>


